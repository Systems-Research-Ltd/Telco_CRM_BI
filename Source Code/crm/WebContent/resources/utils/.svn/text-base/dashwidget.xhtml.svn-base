<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:p="http://primefaces.org/ui"
	xmlns:composite="http://java.sun.com/jsf/composite"	>
	
	<composite:interface>
		<composite:attribute name="report" required="true" type="java.lang.String"
			shortDescription="Report id to be displayed in widget"></composite:attribute>
	</composite:interface>

	<composite:implementation xmlns:utils="http://java.sun.com/jsf/composite/utils">
		<c:choose>
		    <c:when test="#{cc.attrs.report eq '1'}">
				  <utils:datatableDash value="#{dashReportBean.report1List}"
					columns="#{dashReportBean.report1Columns}" rowid="orderId" heading="Orders" reportno="#{cc.attrs.report}" actionListener="#{dashReportBean.actionListener}" actionedit="false"/>	
			</c:when>
			<c:when test="#{cc.attrs.report eq '2'}">
				<p:meterGaugeChart id="salesmeter"
					value="#{dashReportBean.report2}"
					style="width:360px;height:250px" title="Current Week Performance"
					label="Orders/Sales" intervalOuterRadius="75"
					seriesColors="cc6666,E7E658,93b75f,66cc66" rendered="#{cc.attrs.report ne '0'}"/>
			</c:when>
			<c:when test="#{cc.attrs.report eq '3'}">
				<p:barChart id="basic" value="#{dashReportBean.report3}"
					legendPosition="ne" title="Sales Performance" min="0" max="200"
					style="height:250px" animate="true" rendered="#{cc.attrs.report ne '0'}"/>
			</c:when>
			<c:when test="#{cc.attrs.report eq '4'}">
				<p:pieChart id="report2" value="#{dashReportBean.report4}"
					legendPosition="w" title="Revenue" style="width:400px;height:250px" rendered="#{cc.attrs.report ne '0'}"/>
			</c:when>
			<c:when test="#{cc.attrs.report eq '5'}">
				  <utils:datatableDash value="#{dashReportBean.report5List}"
					columns="#{dashReportBean.report5Columns}" rowid="companyId" heading="Companies" reportno="#{cc.attrs.report}" actionListener="#{dashReportBean.actionListener}" actionedit="false"/>	
			</c:when>
			<c:when test="#{cc.attrs.report eq '6'}">
				  <utils:datatableDash value="#{dashReportBean.report6List}"
					columns="#{dashReportBean.report6Columns}" rowid="id" heading="Alerts" reportno="#{cc.attrs.report}" actionedit="false" actionview="false"/>	
			</c:when>
			<c:when test="#{cc.attrs.report eq '7'}">
				  <utils:datatableDash value="#{dashReportBean.report7List}"
					columns="#{dashReportBean.report7Columns}" rowid="franchiseId" heading="Franchises" reportno="#{cc.attrs.report}" actionListener="#{dashReportBean.actionListener}" actionedit="false"/>	
			</c:when>
			<c:when test="#{cc.attrs.report eq '8'}">
				  <utils:datatableDash value="#{dashReportBean.report8List}"
					columns="#{dashReportBean.report8Columns}" rowid="userId" heading="Users" reportno="#{cc.attrs.report}" actionListener="#{dashReportBean.actionListener}" actionedit="false"/>
			</c:when>
			<c:when test="#{cc.attrs.report eq '9'}" >
				  <utils:datatableDash value="#{dashReportBean.report9List}"
					columns="#{dashReportBean.report9Columns}" rowid="id" heading="Lanunched Campaigns" reportno="#{cc.attrs.report}" actionListener="#{dashReportBean.actionListener}" actionedit="false" actionview="true"
					module="marketing"/>
			</c:when>
			 <c:when test="#{cc.attrs.report eq '10'}">
				  <utils:datatableDash value="#{dashReportBean.report10List}"
					columns="#{dashReportBean.report10Columns}" rowid="caseId" heading="Tickets" reportno="#{cc.attrs.report}" actionListener="#{dashReportBean.actionListener}"
					actionedit="false" actionview="true" />
			</c:when>
			<c:when test="#{cc.attrs.report eq '11'}">
				  <utils:datatableDash id="invoices" value="#{dashReportBean.report11List}"
					columns="#{dashReportBean.report11Columns}" rowid="id" heading="Invoices" reportno="#{cc.attrs.report}" actionedit="false" actionview="false" actionviewinvoice="true"/>	
			</c:when>
		</c:choose>
	</composite:implementation>

</html>